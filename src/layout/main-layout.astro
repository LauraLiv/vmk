---
const { title, background } = Astro.props;
import "../styles/style.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon_vmk.svg" />

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.typekit.net/qxa3iai.css" />

    <title>{title}</title>
  </head>
  <body>
    <Header />
    <div class={background}>
    <main class="main">
      <slot />
    </main>
    </div>
    <Footer />
  </body>
</html>

<style>
  .ansog{
    background-image: url("illustration/kaffe.svg");
    background-position-x: -4rem;
    background-position-y: 23rem;
    background-repeat: no-repeat;
    background-size: 500px;
  }

  @media (max-width:900px){
    .ansog{
    background-image: none;
    
  }
}


.forside{
    background-image: url("illustration/blyant.svg"),url("illustration/drink.svg");
    background-position-x: -4rem, 2rem;
    background-position-y: 23rem, 2rem;
    background-repeat: no-repeat;
    background-size: 500px;
  }

  @media (max-width:900px){
    .forside{
    background-image: none;
    
  }
}










  main {
    max-width: 1150px;
    margin-inline: auto;
    padding-inline: 30px;
  }

  body {
    overflow-x: hidden;
  }
</style>
