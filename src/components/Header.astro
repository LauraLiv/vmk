---
import Burger from "../components/Burger.astro";

---
<header>
<div class="header-container">
    <div class="filler"></div>
    <div>
    <a href="/">
        <img class="logo" src="img/vmk.svg" alt="vmk">
    </a></div>
    <div class="burger_menu">
        <Burger />
    </div>
</div>
