<form name="frivillig" method="post" netlify>
  <input name="Navn" id="name" type="text" placeholder="Navn" required />
  <input name="Email" id="mail" type="email" placeholder="E-Mail" required />
  <input name="Telefon" id="number" type="tel" placeholder="Telefon nummer" required />
  <input type="submit" class="submitknap" value="Indsend" />
</form>

<style>
  form {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 19px;
  }

  input {
    border: none;
    border-radius: 15px;
    width: 353px;
    height: 60px;
    padding: 10px;
    box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.25);
  }

  .submitknap {
    background-color: var(--aubergine);
    color: var(--maincream);
    box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.25);
    border-radius: 5px 15px;
    text-decoration: none;
    width: 120px;
    margin: auto;
    cursor: pointer;
  }

  .submitknap:hover {
    background-color: var(--orangesun);
  }

  @media (min-width: 700px) {
    input {
      width: 500px;
    }
  }
</style>
