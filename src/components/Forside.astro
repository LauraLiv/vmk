<style>
  .mobile {
    max-width: 300px;
    display: block;
    margin: auto;
  }

  .words,
  .web,
  .text {
    display: none;
  }

  @media (min-width: 500px) {
    .words {
      grid-area: 1/3/1/9;
      font-size: 0.9rem;
      align-self: center;
      justify-self: center;
      padding: 20px;
      display: block;
      font-family: "parry", sans-serif;
    }
    .web {
      display: block;
      border-radius: 20px;
      grid-area: 2/2/9/9;
      width: 93%;
    }

    .text {
      background-color: var(--aubergine);
      border-radius: 20px;
      grid-area: 1 / 1 / 3 /3;
      display: block;
    }
    .text img {
      width: 80%;
    }

    .mobile {
      display: none;
    }

    .forside_grid {
      display: grid;
      grid-template-rows: repeat(5, 1fr);
      grid-template-columns: repeat(8, 1fr);
      margin: 0px 50px -15px 50px;
    }
  }

  @media (min-width: 700px) {
    .words {
      font-size: 1.5rem;
    }
  }

  @media (min-width: 960px) {
    .words {
      font-size: 2.3rem;
    }
  }
</style>
