const currentDate = new Date();
const month = currentDate.getMonth() + 1; // Adding 1 since getMonth() returns zero-based index
const year = currentDate.getFullYear();
---

<div class="burgerBack">
  <span class="burger"></span>
</div>

<nav class="hide">
  <ul>
