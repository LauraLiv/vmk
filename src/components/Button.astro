---
const {classname, action,link} = Astro.props;

---

<a class={classname+ " button_main"} href={link}>{action}</a>


<style>

.button_main{
    background-color:var(--aubergine);
    color: var(--maincream);
    box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.25);
    border-radius: 5px 15px;
    text-decoration: none;
}

.button_main:hover{
    background-color:var(--babyblue);
}

.button_orange:hover{
    background-color:var(--orangesun);
}
.button_small{
    padding: 10px 20px;
}

.button_big{
    padding: 11px 22px;
}

@media (min-width: 600px) {
.button_small{
    padding: 11px 22px;
}

.button_big{
    padding: 15px 30px;
}
    

}

</style>