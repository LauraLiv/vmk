<style>
  .text_section{
    margin-top: 100px;
  }
  .price{
    font-size: 20px;
    font-weight: bolder;

  }
  span {
    font-weight: bold;
}

.forms_section{
  display: flex;
  flex-direction:column;
  align-items:center;
}

.roof{
  position: relative;
  max-width: 350px;
  bottom: -2px;
  
}
@media (min-width:800px){
  .ansog_container{
    display: grid;
    grid-template-columns: 1fr 1fr;
  }
}
</style>