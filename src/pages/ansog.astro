---
export const prerender = true;
import Ansog from "../components/Ansog.astro";
import MainLayout from "../layout/main-layout.astro";
import ApiGet from "../components/ApiGet.astro";
---

<MainLayout background="ansog-bg">
  <h1>Ans√∏g huset</h1>
  <div class="ansog_container">
    <div class="text_section">
      <ApiGet pagenr="2"/>
      <br>
      <p>
        <br> <span class="price"> Priser: </span>
        <br> <span>Halv dag: </span> 200 kr
        <br> <span> Hel dag: </span> 350 kr
      </p>
    </div>


    <div class="forms_section">
      <img class="roof" src="img/tag.svg" alt="">
      <Ansog />
    </div>
  </div>
</MainLayout>

<style>
  

  

  .ansog_container{
    display: flex;
    justify-content: center;
    
    flex-wrap: wrap;
  }
  .text_section{
    margin-top: 10px;
    max-width: 550px;
  }
  .price{
    font-size: 20px;
    font-weight: bolder;

  }
  span {
    font-weight: bold;
}

.forms_section{
  display: flex;
  flex-direction:column;
  align-items:center;
}

.roof{
  position: relative;
  width: 350px;
  bottom: -2px;
  
}
@media (min-width:900px){
  .ansog_container{
    flex-wrap:nowrap;
    justify-content: space-between;
    
  }
  .text_section{
    margin-top: 100px;
    
  }
}

@media (max-width:350px){
  .roof {
    width: 280px;
  }
}
</style>